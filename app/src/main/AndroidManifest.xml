<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.andrdev.easyenglish" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GrammarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GrammarLinkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VerbsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FactsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AudioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VideoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.TubePlayerActivity" />
        <service android:name=".AudioPlayerService"/>
    </application>

</manifest>
