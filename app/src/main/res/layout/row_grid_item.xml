<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp"

    android:background="@drawable/grid_item"
    >

    <ProgressBar
        android:id="@+id/progressGrid"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/marginProgress"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        style="?android:attr/android:progressBarStyleSmall" />
    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/rowGridImage"
        android:layout_height="@dimen/rowGridImage"
        android:padding="2dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="@dimen/rowGridImage"
        android:layout_height="@dimen/rowGridImage"
        android:padding="2dp"
        android:src="@mipmap/play_button"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_below="@id/picture"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/rowGridTitleTextSize"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>